<h1><%= @cocktail.name %></h1>
<br>
<% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> <%= dose.description %></li>
  <% end %>
</ul>

<%= render '/doses/form', dose: @dose, cocktail: @cocktail %>

